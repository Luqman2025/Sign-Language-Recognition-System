<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/otppopup"
    android:padding="20sp">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/otpimg"
        android:layout_centerHorizontal="true"
        android:id="@+id/imgotp"/>
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/imgotp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the OTP send to\n"
        android:textSize="16sp"
        android:layout_marginTop="15sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/box"
        android:layout_marginTop="17sp"
        android:layout_below="@id/txt1"
        android:weightSum="6">
        <EditText
            android:layout_weight="6"
            android:id="@+id/otpno1"
            android:inputType="number"
            android:maxLength="6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="4dp"
            android:textSize="23sp"
            android:hint="000000"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/otpbox"/>

    </LinearLayout>
    <Button
        android:id="@+id/verifyotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/box"
        android:layout_marginVertical="25dp"
        android:layout_centerHorizontal="true"
        android:text="Verify And Register"
        android:textColor="@color/base"
        android:textSize="18sp"
        android:backgroundTint="@color/white"/>
</RelativeLayout>